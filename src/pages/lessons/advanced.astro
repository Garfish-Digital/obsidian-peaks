---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
---

<BaseLayout title="Advanced Lessons - Obsidian Peaks">
  <Navigation />
  
  <main class="lesson-page">
    <div class="container">
      <div class="glass-hero-text animate__zoomInDown">
        <h1>Advanced Lessons</h1>
        <p>Master expert terrain and advanced techniques with our top instructors</p>
      </div>
      
      <div class="lesson-content">
        <div class="glass-card card-light animate__zoomInLeft">
          <h3 class="card-title">What You'll Learn</h3>
          <ul>
            <li>Expert terrain navigation and safety</li>
            <li>Advanced carving and racing techniques</li>
            <li>Backcountry skiing fundamentals</li>
            <li>Freestyle and park skills</li>
          </ul>
        </div>
        
        <div class="glass-card card-orange animate__zoomInRight">
          <h3 class="card-title">Lesson Details</h3>
          <p><strong>Duration:</strong> 4 hours</p>
          <p><strong>Group Size:</strong> Maximum 3 students</p>
          <p><strong>Prerequisites:</strong> Comfortable on black diamond runs</p>
          <p><strong>Price:</strong> $125 per person</p>
          <a href="/book-now" class="glass-button primary">Book Now</a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style lang="scss">
  @import '../../styles/variables';
  @import '../../styles/glassmorphism';
  
  // Animations for lesson page
  .animate__zoomInLeft {
    animation: zoomInLeft 0.6s;
    animation-fill-mode: both;
  }
  
  .animate__zoomInRight {
    animation: zoomInRight 0.6s;
    animation-fill-mode: both;
  }
  
  .animate__bounceIn {
    animation: bounceIn 0.75s;
    animation-fill-mode: both;
  }
  
  .animate__zoomInDown {
    animation: zoomInDown 0.6s;
    animation-fill-mode: both;
  }
  
  @keyframes zoomInLeft {
    from {
      opacity: 0;
      transform: scale3d(0.1, 0.1, 0.1) translate3d(-1000px, 0, 0);
      animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
    }
    60% {
      opacity: 1;
      transform: scale3d(0.475, 0.475, 0.475) translate3d(10px, 0, 0);
      animation-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1);
    }
  }
  
  @keyframes zoomInRight {
    from {
      opacity: 0;
      transform: scale3d(0.1, 0.1, 0.1) translate3d(1000px, 0, 0);
      animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
    }
    60% {
      opacity: 1;
      transform: scale3d(0.475, 0.475, 0.475) translate3d(-10px, 0, 0);
      animation-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1);
    }
  }
  
  @keyframes bounceIn {
    from, 20%, 40%, 60%, 80%, to {
      animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
    }
    0% {
      opacity: 0;
      transform: scale3d(0.3, 0.3, 0.3);
    }
    20% {
      transform: scale3d(1.1, 1.1, 1.1);
    }
    40% {
      transform: scale3d(0.9, 0.9, 0.9);
    }
    60% {
      opacity: 1;
      transform: scale3d(1.03, 1.03, 1.03);
    }
    80% {
      transform: scale3d(0.97, 0.97, 0.97);
    }
    to {
      opacity: 1;
      transform: scale3d(1, 1, 1);
    }
  }
  
  @keyframes zoomInDown {
    from {
      opacity: 0;
      transform: scale3d(0.1, 0.1, 0.1) translate3d(0, -1000px, 0);
      animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
    }
    60% {
      opacity: 1;
      transform: scale3d(0.475, 0.475, 0.475) translate3d(0, 60px, 0);
      animation-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1);
    }
  }
  
  .lesson-page {
    min-height: 100vh;
    padding: 120px $spacing-md $spacing-xxl;
  }
  
  .container {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .card-orange {
    @include glass-accent-orange;
  }
  
  .card-title {
    font-family: $font-display;
    font-size: 1.25rem;
    color: #222;
    margin-bottom: $spacing-md;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }
  
  .lesson-content {
    display: grid;
    gap: $spacing-xl;
    margin-top: $spacing-xl;
  }
  
  ul {
    list-style: none;
    padding: 0;
    
    li {
      padding: $spacing-xs 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      
      &:before {
        content: 'ðŸŽ¿';
        margin-right: $spacing-sm;
      }
    }
  }
</style>