---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout title="Book Now - Obsidian Peaks">
  <Navigation />
  
  <main class="booking-page">
    <div class="container">
      <div class="glass-hero-text animate__zoomInLeft">
        <h1>Book Your Adventure</h1>
        <p>Reserve your lessons and equipment for an unforgettable experience</p>
      </div>
      
      <div class="booking-form-container animate__zoomInRight">
        <div class="glass-card-layered glass-card-content">
          <form class="booking-form">
            <div class="form-group">
              <label for="service">Select Service</label>
              <select id="service" name="service" required>
                <option value="">Choose a service...</option>
                <option value="beginner-lesson">Beginner Lesson - $75</option>
                <option value="intermediate-lesson">Intermediate Lesson - $95</option>
                <option value="advanced-lesson">Advanced Lesson - $125</option>
                <option value="ski-rental">Ski Package - $45/day</option>
                <option value="snowboard-rental">Snowboard Package - $42/day</option>
                <option value="premium-rental">Premium Package - $65/day</option>
              </select>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" required>
              </div>
              
              <div class="form-group">
                <label for="time">Time</label>
                <select id="time" name="time" required>
                  <option value="">Select time...</option>
                  <option value="9:00">9:00 AM</option>
                  <option value="11:00">11:00 AM</option>
                  <option value="1:00">1:00 PM</option>
                  <option value="3:00">3:00 PM</option>
                </select>
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" required>
              </div>
              
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="phone">Phone</label>
                <input type="tel" id="phone" name="phone" required>
              </div>
              
              <div class="form-group">
                <label for="participants">Participants</label>
                <input type="number" id="participants" name="participants" min="1" max="6" value="1" required>
              </div>
            </div>
            
            <div class="form-group">
              <label for="notes">Special Requests</label>
              <textarea id="notes" name="notes" rows="4" placeholder="Any special requests or notes..."></textarea>
            </div>
            
            <button type="submit" class="white-glass-button submit-btn">Book Now</button>
          </form>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/glassmorphism';
  
  // Animations for book-now page
  .animate__zoomInLeft {
    animation: zoomInLeft 0.6s;
    animation-fill-mode: both;
  }
  
  .animate__zoomInRight {
    animation: zoomInRight 0.6s;
    animation-fill-mode: both;
  }
  
  @keyframes zoomInLeft {
    from {
      opacity: 0;
      transform: scale3d(0.1, 0.1, 0.1) translate3d(-1000px, 0, 0);
      animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
    }
    60% {
      opacity: 1;
      transform: scale3d(0.475, 0.475, 0.475) translate3d(10px, 0, 0);
      animation-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1);
    }
  }
  
  @keyframes zoomInRight {
    from {
      opacity: 0;
      transform: scale3d(0.1, 0.1, 0.1) translate3d(1000px, 0, 0);
      animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
    }
    60% {
      opacity: 1;
      transform: scale3d(0.475, 0.475, 0.475) translate3d(-10px, 0, 0);
      animation-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1);
    }
  }
   .booking-page {
      &::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url("/images/book-now.jpg");
      background-size: cover;
      background-position: top;
      background-repeat: no-repeat;
    //   filter: grayscale(100%);
                // filter: grayscale(100%) brightness(1.3) contrast(0.8) saturate(0);

      opacity: 0.3;
      z-index: -1;
      pointer-events: none;
    }
  }
  
  .booking-page {
    min-height: 100vh;
    padding: 120px $spacing-md $spacing-xxl;

      h1 {
font-family: $font-display;
      font-size: clamp(2.5rem, 6vw, 4rem);
      color: rgb(0, 0, 0, .25);
      margin-bottom: $spacing-md;
      text-transform: uppercase;
      letter-spacing: 1px;   
     }
  }
  
  .container {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .booking-form-container {
    margin-top: $spacing-xl;
  }
  
  .booking-form {
    display: grid;
    gap: $spacing-lg;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: $spacing-md;
    
    @media (max-width: $tablet) {
      grid-template-columns: 1fr;
      gap: $spacing-sm;
    }
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: $spacing-xs;
  }
  
  label {
    font-weight: 600;
    color: #333;
    font-size: 0.9rem;
  }
  
  input, select, textarea {
    @include glass-input;
    padding: 15px 20px;
    font-size: 1rem;
    box-sizing: border-box;
  }

  input[type="date"] {
    padding: 15px 20px;
    min-height: 54px;
    height: 54px;
    width: 100%;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    box-sizing: border-box;
    
    // iOS specific fixes
    &::-webkit-date-and-time-value {
      text-align: left;
      padding: 0;
      margin: 0;
    }
    
    &::-webkit-datetime-edit {
      padding: 0;
      margin: 0;
    }
  }
  
  select {
    cursor: pointer;
    appearance: none;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='rgba(255,255,255,0.6)' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6,9 12,15 18,9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 15px center;
    background-size: 20px;
    padding: 15px 50px 15px 5px;
    // padding-right: 50px;
    
    option {
      background: rgba(20, 20, 30, 0.95);
      color: rgba(255, 255, 255, 0.9);
    }
  }
  
  .submit-btn {
    // @include glass-button-enhanced;
    width: 100%;
    // padding: 15px 30px;
    font-size: 1.1rem;
    margin-top: $spacing-md;
    border: none;
    border-radius: 12px;
  }

  @media (max-width: $tablet) {
    .booking-page {
      &::before {
        background-position: center center;
        opacity: 0.25;
      }
    }
  }
</style>