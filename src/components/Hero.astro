---
// Hero section with glassmorphism design
export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title, 
  subtitle = "Experience the beauty of frosted glass design meets mountain aesthetics",
  ctaText = "Explore",
  ctaLink = "#about"
} = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <div class="glass-hero-text obsidian-card-layered animate__zoomInDown">
      <h1 class="hero-title">Obsidian<br>Peaks</h1>
      <p class="hero-subtitle">{subtitle}</p>
      {ctaText && (
        <a href={ctaLink} class="glass-button-layered primary cta-button">
          {ctaText}
          {/* <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg> */}
        </a>
      )}
    </div>
  </div>
</section>

<style lang="scss">
  @import '../styles/variables';
  @import '../styles/glassmorphism';
  
  // Animation for Hero component
  .animate__zoomInDown {
    animation: zoomInDown 0.6s;
    animation-fill-mode: both;
  }
  
  @keyframes zoomInDown {
    from {
      opacity: 0;
      transform: scale3d(0.1, 0.1, 0.1) translate3d(0, -1000px, 0);
      animation-timing-function: cubic-bezier(0.55, 0.055, 0.675, 0.19);
    }
    60% {
      opacity: 1;
      transform: scale3d(0.475, 0.475, 0.475) translate3d(0, 60px, 0);
      animation-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1);
    }
  }
  
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: flex-end;
    justify-content: flex-end;
    padding: $spacing-xl $spacing-md;
    position: relative;
    
    &::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('/images/istockphoto-1358217175-1024x1024.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      filter: grayscale(100%);
      opacity: 0.1;
      z-index: -1;
      pointer-events: none;
    }
  }

  
  
  .hero-content {
    width: 60%;
    max-width: 300px;
    margin: 0;
    padding-bottom: calc(35vh - 15vh); // Golden ratio positioning adjusted down 15vh  
    padding-right: 5vw; // Position in right golden section
  }
  
  .hero-title {
    font-family: $font-display;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: $spacing-md;
    line-height: 1.1;
    letter-spacing: 2px;
    text-transform: uppercase;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    // background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
    // -webkit-background-clip: text;
    // -webkit-text-fill-color: transparent;
    // background-clip: text;
  }
  
  .hero-subtitle {
    font-size: clamp(0.75rem, 2vw, 0.65rem);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: $spacing-lg;
    line-height: 1.6;
    font-weight: 300;
  }
  
  // Note: .glass-button-layered styles moved to _glassmorphism.scss for global access
  
  .cta-button {
    margin-top: $spacing-lg;
    margin-bottom: $spacing-md;
    display: block;
    // border-radius: 12px;
  }
  
  @media (max-width: $desktop) {
    .hero {
      padding: 100px $spacing-md $spacing-xl;
    }
  }
  
  @media (max-width: $tablet) {
    .hero {
      padding: 80px $spacing-md $spacing-lg;
    }
    
    .glass-hero-text {
      padding: $spacing-lg;
    }
  }
  
  @media (max-width: $mobile) {
    .hero {
      padding: 60px $spacing-sm $spacing-md;
    }
    
    .glass-hero-text {
      padding: $spacing-md;
    }
    
    .cta-button {
      padding: 12px 24px;
      font-size: 1rem;
    }
  }
</style>